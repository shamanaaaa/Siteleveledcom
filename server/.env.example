# ── SMTP configuration ──────────────────────────────────────
# Gmail example:
#   SMTP_HOST=smtp.gmail.com
#   SMTP_PORT=587
#   SMTP_SECURE=false
#   Use an App Password (not your normal Gmail password):
#   https://myaccount.google.com/apppasswords

# Custom domain / other SMTP:
#   SMTP_HOST=mail.yourdomain.com
#   SMTP_PORT=465
#   SMTP_SECURE=true

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# The email address used to send (must match SMTP_USER for most providers)
SMTP_USER=your@email.com
SMTP_PASS=your-app-password

# (optional) Display name in From header – defaults to SMTP_USER
SMTP_FROM=SiteLeveled <your@email.com>

# Where new leads are delivered (your business inbox)
MAIL_TO=info@siteleveled.com

# Server port (default: 3001)
PORT=3001
